@prefix ex: <https://w3id.org/agri-image/ontology#> .
@prefix dc: <http://purl.org/dc/terms/> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix qudt: <http://qudt.org/schema/qudt/> .
@prefix unit: <http://qudt.org/vocab/unit/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

#################################################################
# Top-level classes (strong hierarchy)
#################################################################

ex:DatasetPackage a owl:Class ;
    rdfs:label "Dataset Package" ;
    rdfs:comment "Top-level entity representing a full agricultural dataset including fields, machines, images, and metadata." .

ex:Dataset a owl:Class ;
    rdfs:label "Dataset" ;
    rdfs:subClassOf ex:DatasetPackage ;
    rdfs:comment "Metadata describing an agricultural dataset." .

ex:Field a owl:Class ;
    rdfs:label "Field" ;
    rdfs:subClassOf ex:DatasetPackage ;
    rdfs:comment "A field within an agricultural dataset." .

ex:Plot a owl:Class ;
    rdfs:label "Plot" ;
    rdfs:subClassOf ex:Field ;
    rdfs:comment "A plot within a field, representing a sub-area." .

ex:Machine a owl:Class ;
    rdfs:label "Machine" ;
    rdfs:subClassOf ex:DatasetPackage ;
    rdfs:comment "Machine or platform used for image collection." .

ex:Camera a owl:Class ;
    rdfs:label "Camera" ;
    rdfs:subClassOf ex:Machine ;
    rdfs:comment "An imaging device mounted on a machine." .

ex:Image a owl:Class ;
    rdfs:label "Image" ;
    rdfs:subClassOf ex:DatasetPackage ;
    rdfs:comment "A single agricultural image and its contextual metadata." .

#################################################################
# Dataset properties
#################################################################

ex:title a owl:DatatypeProperty ;
    rdfs:domain ex:Dataset ;
    rdfs:range xsd:string ;
    rdfs:label "title" .

ex:description a owl:DatatypeProperty ;
    rdfs:domain ex:Dataset ;
    rdfs:range xsd:string ;
    rdfs:label "description" .

ex:identifier a owl:DatatypeProperty ;
    rdfs:domain ex:Dataset ;
    rdfs:range xsd:string ;
    rdfs:label "identifier" .

ex:creator a owl:DatatypeProperty ;
    rdfs:domain ex:Dataset ;
    rdfs:range xsd:string ;
    rdfs:label "creator" .

#################################################################
# Field and plot properties
#################################################################

ex:fieldName a owl:DatatypeProperty ;
    rdfs:domain ex:Field ;
    rdfs:range xsd:string .

ex:fieldID a owl:DatatypeProperty ;
    rdfs:domain ex:Field ;
    rdfs:range xsd:string .

ex:hasPlot a owl:ObjectProperty ;
    rdfs:domain ex:Field ;
    rdfs:range ex:Plot .

#################################################################
# Machine + Camera
#################################################################

ex:machineName a owl:DatatypeProperty ;
    rdfs:domain ex:Machine ;
    rdfs:range xsd:string .

ex:machineID a owl:DatatypeProperty ;
    rdfs:domain ex:Machine ;
    rdfs:range xsd:string .

ex:hasCamera a owl:ObjectProperty ;
    rdfs:domain ex:Machine ;
    rdfs:range ex:Camera .

# Camera properties (cleaned)

ex:cameraName a owl:DatatypeProperty ;
    rdfs:domain ex:Camera ;
    rdfs:range xsd:string .

ex:cameraID a owl:DatatypeProperty ;
    rdfs:domain ex:Camera ;
    rdfs:range xsd:string .

ex:cameraModel a owl:DatatypeProperty ;
    rdfs:domain ex:Camera ;
    rdfs:range xsd:string .

ex:cameraLensModel a owl:DatatypeProperty ;
    rdfs:domain ex:Camera ;
    rdfs:range xsd:string .

ex:maxPixelX a owl:DatatypeProperty ;
    rdfs:domain ex:Camera ;
    rdfs:range xsd:integer .

ex:maxPixelY a owl:DatatypeProperty ;
    rdfs:domain ex:Camera ;
    rdfs:range xsd:integer .

ex:pixelSize a owl:DatatypeProperty ;
    rdfs:domain ex:Camera ;
    rdfs:range xsd:decimal ;
    qudt:unit unit:MicroM .

ex:focalLength a owl:DatatypeProperty ;
    rdfs:domain ex:Camera ;
    rdfs:range xsd:decimal ;
    qudt:unit unit:MilliM .

#################################################################
# Image properties
#################################################################

ex:imageName a owl:DatatypeProperty ;
    rdfs:domain ex:Image ;
    rdfs:range xsd:string .

ex:imageTimestamp a owl:DatatypeProperty ;
    rdfs:domain ex:Image ;
    rdfs:range xsd:string .

ex:imageID a owl:DatatypeProperty ;
    rdfs:domain ex:Image ;
    rdfs:range xsd:string .

ex:belongsToCamera a owl:ObjectProperty ;
    rdfs:domain ex:Image ;
    rdfs:range ex:Camera .

ex:belongsToField a owl:ObjectProperty ;
    rdfs:domain ex:Image ;
    rdfs:range ex:Field .

ex:belongsToPlot a owl:ObjectProperty ;
    rdfs:domain ex:Image ;
    rdfs:range ex:Plot .

ex:imageXYZ a owl:DatatypeProperty ;
    rdfs:domain ex:Image ;
    rdfs:range xsd:string ; # list encoded
    rdfs:comment "Camera XYZ coordinates relative to machine base." .

ex:imageQuaternionXYZW a owl:DatatypeProperty ;
    rdfs:domain ex:Image ;
    rdfs:range xsd:string ;
    rdfs:comment "Camera quaternion orientation [x,y,z,w]." .

ex:baseXYZ a owl:DatatypeProperty ;
    rdfs:domain ex:Image ;
    rdfs:range xsd:string .

ex:baseQuaternionXYZW a owl:DatatypeProperty ;
    rdfs:domain ex:Image ;
    rdfs:range xsd:string .

#################################################################
# End of ontology
#################################################################
